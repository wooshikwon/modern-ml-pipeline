# 🏗️ Environment Configuration
APP_ENV=local  # local/dev/prod - 이 값만 바꿔서 환경 전환!

# 🐘 Database Settings (All Environments)
POSTGRES_HOST=localhost                    # local: localhost, dev/prod: actual host
POSTGRES_PORT=5432
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_db_name

# ⚡ Redis Cache (All Environments)  
REDIS_HOST=localhost                       # local: localhost, dev/prod: actual host
REDIS_PORT=6379
REDIS_PASSWORD=                           # local: empty, dev/prod: actual password

# ☁️ Cloud Storage - GCP (dev/prod only)
GCP_PROJECT_ID=your-gcp-project
GCS_BUCKET=your-ml-bucket
GCS_SERVICE_ACCOUNT_PATH=path/to/service-account.json

# ☁️ Cloud Storage - AWS (dev/prod only)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-s3-bucket
AWS_REGION=us-west-2

# 📊 MLflow Tracking (All Environments)
MLFLOW_TRACKING_URI=http://localhost:5000  # local: local, dev/prod: remote URI
MLFLOW_ARTIFACT_ROOT=./mlruns              # local: local, dev/prod: cloud storage

# 🔐 Security (dev/prod only)
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key