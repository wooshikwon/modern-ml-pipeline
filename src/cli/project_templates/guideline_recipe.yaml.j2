# {{ model_class_path }} 모델을 위한 레시피 가이드
# 생성 날짜: {{ creation_date }}

name: "autogenerated_{{ model_name }}_recipe"

model:
  class_path: "{{ model_class_path }}"
  
  # 데이터 로더 설정 (사용자 환경에 맞게 수정 필요)
  loader:
    name: "my_data_loader"
    source_uri: "path/to/your/data.csv"
    adapter: "storage" # or "sql"
    entity_schema:
      entity_columns: ["my_entity_id"]
      timestamp_column: "my_timestamp"
  
  # 데이터 인터페이스 (추정된 task_type, 필요시 수정)
  data_interface:
    task_type: "{{ task_type }}"
    target_column: "my_target"

  # 사용 가능한 하이퍼파라미터 목록
  # 값(value)은 대부분 기본값이며, 타입과 범위 주석을 참고하여 수정하세요.
  hyperparameters:
    {% for name, details in hyperparameters.items() %}
    {{ name }}: {{ details.value }}  # type: {{ details.type }}, default: {{ details.default }}
    {% endfor %}

# Augmenter, Preprocessor 등 다른 섹션은 필요에 따라 추가하세요.
# 예시:
#  augmenter:
#    type: "feature_store"
#    features:
#      - feature_namespace: "my_feature_view"
#        features: ["feature1", "feature2"]
#
#  preprocessor:
#    name: "default_preprocessor"

# "{{ task_type }}" 태스크에 추천되는 평가 지표
evaluation:
  metrics:
    {% for metric in recommended_metrics -%}
    - "{{ metric }}"
    {% endfor %}
  validation:
    method: "train_test_split"
    test_size: 0.2 