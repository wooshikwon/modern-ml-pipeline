# 🎯 실행 환경 설정
APP_ENV=dev  # local, dev, prod 중 선택

# 📊 MLflow 연동 설정 (dev 환경)
MLFLOW_TRACKING_URI=http://localhost:5002
MLFLOW_EXPERIMENT_NAME=My-Dev-Experiment

# 🐘 PostgreSQL 연동 설정 (dev 환경)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mlpipeline_user
POSTGRES_DB=mlpipeline_db
POSTGRES_PASSWORD=secure_password_123

# ⚡ Redis/Feature Store 연동 설정 (dev 환경)
REDIS_HOST=localhost
REDIS_PORT=6379
FEAST_REGISTRY_PATH=../mmp-local-dev/feast/feature_repo/registry.db

# 🔧 고급 설정 (선택적)
# PYTHONPATH=/path/to/modern-ml-pipeline/src
# OPTUNA_DB_URL=sqlite:///optuna.db
# LOG_LEVEL=INFO

